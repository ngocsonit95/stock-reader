{
    "manifest_version": 3,
    "name": "Stock Voice Reader",
    "version": "1.1",
    "description": "Đọc lệnh khớp chứng khoán trực tiếp từ bảng giá",
    "permissions": [
        "tts",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "Cấu hình Đọc lệnh"
    },
    "content_scripts": [
        {
            "matches": [
                "https://fireant.vn/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}